---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<button class="button-container" type="submit">
  <h1>{title}</h1>
</button>
<style>
  .button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
    border: solid 1px white;
    width: 20%; /* Ancho flexible */
    padding: 0.5rem 1.5rem; /* Espaciado interno */
    font-size: 1rem; /* Tamaño de fuente adaptable */
    transition:
      background-color 0.3s,
      color 0.3s; /* Transición suave */
  }

  .button-container:hover {
    background-color: white;
    color: black;
    cursor: pointer;
  }

  /* Media queries para pantallas más pequeñas */
  @media (max-width: 768px) {
    .button-container {
      width: 40%; /* Aumenta el ancho en pantallas medianas */
      padding: 0.8rem 1.5rem; /* Ajusta el padding */
      font-size: 0.9rem; /* Reduce el tamaño de la fuente */
    }
  }

  @media (max-width: 480px) {
    .button-container {
      width: 60%; /* Botón más grande en pantallas pequeñas */
      padding: 0.6rem 1rem; /* Más compacto en móviles */
      font-size: 0.8rem; /* Tamaño de fuente aún más pequeño */
    }
  }
</style>
